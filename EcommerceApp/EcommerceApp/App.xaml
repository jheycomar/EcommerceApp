<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EcommerceApp.App"
             xmlns:infra="clr-namespace:EcommerceApp.Infrastructure;assembly=EcommerceApp">
	<Application.Resources>
        <ResourceDictionary>
            <!-- General colors -->
            <Color x:Key="MainColor">#477077</Color>
            <Color x:Key="FontColor">#52656b</Color>
            <Color x:Key="AccentColor">#cdff00</Color>
            <Color x:Key="MenuColor">#a3abaf</Color>
            <Color x:Key="BackgroundColor">#ffffff</Color>
            <Color x:Key="Btncolor">#2E545A</Color>
            
            <!-- Locator -->
            <infra:InstanceLocator x:Key="Locator"></infra:InstanceLocator>


        </ResourceDictionary>
	</Application.Resources>
</Application>